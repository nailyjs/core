{
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "target": "ES2021",
    "moduleResolution": "Node",
    "module": "ES6",
    "esModuleInterop": true,
    "strict": false,
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["src/**/*", "rollup.config.ts"]
}
