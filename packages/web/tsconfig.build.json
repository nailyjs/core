{
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "declarationDir": "lib/types",
    "target": "ES2021",
    "moduleResolution": "Node",
    "module": "ES6",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["src"]
}
